<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/activity_default_margin"
    android:orientation="vertical">

    <TextView
        android:id="@+id/contactUs"
        android:textAppearance="?android:textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:drawablePadding="10dp"
        android:text="@string/contact_us"
        tools:text="Contact Us"
        app:drawableStartCompat="@drawable/ic_contact_support"
        app:drawableTint="@color/colorAccent" />

    <TextView
        android:id="@+id/termsOfUse"
        tools:text="Terms of Use"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:drawablePadding="10dp"
        android:textAppearance="?android:textAppearanceLarge"
        android:text="@string/terms_of_use"
        app:drawableStartCompat="@drawable/ic_document"
        app:drawableTint="@color/colorAccent" />

    <TextView
        android:id="@+id/privacyPolicy"
        tools:text="Privacy Policy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:drawablePadding="10dp"
        android:textAppearance="?android:textAppearanceLarge"
        android:text="@string/privacy_policy"
        app:drawableStartCompat="@drawable/ic_privacy"
        app:drawableTint="@color/colorAccent" />

    <TextView
        android:id="@+id/ossLicenses"
        tools:text="Licences"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textAppearance="?android:textAppearanceLarge"
        android:text="@string/licenses"
        android:drawablePadding="10dp"
        app:drawableStartCompat="@drawable/ic_license"
        app:drawableTint="@color/colorAccent" />

    <TextView
        android:id="@+id/aboutTheApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:drawablePadding="10dp"
        android:textAppearance="?android:textAppearanceLarge"
        android:text="@string/about_the_app"
        app:drawableStartCompat="@drawable/ic_icon_push"
        app:drawableTint="@color/colorAccent" />
</LinearLayout>